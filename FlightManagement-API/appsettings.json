{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Temp\\Logs\\Logs.txt",
          "outputTemplate":  "{Timestamp} {Message} {Newline:1}{Exception:1}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
